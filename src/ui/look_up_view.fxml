<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.LookUpController">
   <children>
      <TextField fx:id="lookUp" prefHeight="26.0" prefWidth="489.0" promptText="Search Here...">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TextField>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="Search History" />
            <Region HBox.hgrow="ALWAYS" />
            <CheckBox fx:id="cBox" mnemonicParsing="false" text="Tra cứu trong các từ đã học" />
            <Button fx:id="btnSearch" alignment="CENTER" mnemonicParsing="false" text=" Search">
               <tooltip>
                  <Tooltip text="Click to search" />
               </tooltip>
               <font>
                  <Font name="FontAwesome" size="13.0" />
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
         <children>
            <SplitPane dividerPositions="0.3" prefHeight="300.0" prefWidth="600.0" HBox.hgrow="ALWAYS">
               <items>
                  <ListView fx:id="historyList" minWidth="100.0" />
                  <TextArea fx:id="textArea" editable="false" minWidth="200.0" wrapText="true">
                     <font>
                        <Font name="System Italic" size="16.0" />
                     </font>
                  </TextArea>
               </items>
            </SplitPane>
            <VBox alignment="CENTER" spacing="10.0">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
               <children>
                  <Button fx:id="btnAdd" layoutX="24.0" layoutY="129.0" mnemonicParsing="false" text="Add" />
                  <Button fx:id="btnEdit" mnemonicParsing="false" text="Edit" />
                  <Button fx:id="btnDelete" mnemonicParsing="false" text="Delete" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
      <Button fx:id="btnClose" mnemonicParsing="false" text="Close">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
